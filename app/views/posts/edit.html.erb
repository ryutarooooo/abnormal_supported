<h1>異常修正ページ</h1>
<%= form_with model: @post, local: true do |form| %>
  <div>
    <%= form.label :place, "発生工程" %>
    <%= form.text_field :place %>
  </div>
  <div>
    <%= form.label :title, "異常名" %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :content, "異常内容" %>
    <%= form.text_field :content %>
  </div>
  <div>
    <%= form.label :fix_detail, "異常処置方法" %>
    <%= form.text_field :fix_detail %>
  </div>
  <div>
    <%= form.submit "変更実施" %>
  </div>
<% end %>
<% if @post.errors.any? %>
  <div>
    <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><span style="color: red;"><%= msg %></span></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h1 class = "text-center"><%= "異常発生変更" %></h1>
<%= render "layouts/error_messages" %>
<%= form_with model: @post, local: true do |form| %>
  <div class="form-group">
    <%= form.label :place %>
    <%= form.text_field :place, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :content %>
    <%= form.text_field :content, class: "form-control"  %>
  </div>
  <div class="form-group">
    <%= form.label :fix_detail %>
    <%= form.text_area :fix_detail, class: "form-control", rows: 7 %>
  </div>
  <div>
    <%= form.submit button_value="変更実施", class: "btn btn-primary btn-block" %>
  </div>
<% end %>

<h1>異常登録</h1>
<%= form_with model: @post, local: true do |form| %>
  <div>
    <%= form.label :place %>
    <%= form.text_field :place %>
  </div>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>
  <div>
    <%= form.label :fix_detail %>
    <%= form.text_field :fix_detail %>
  </div>
  <div>
    <%= form.submit "登録実施" %>
  </div>
<% end %>
<% if @post.errors.any? %>
  <div>
    <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><span style="color: red;"><%= msg %></span></li>
      <% end %>
    </ul>
  </div>
<% end %>
